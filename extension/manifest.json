{
  "manifest_version": 3,
  "name": "Lncn Auto Copy",
  "version": "2.0",
  "description": "Auto paste SSR into user clipboard",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "tabs", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Symbols & Accents Toolkit"
  },
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}
